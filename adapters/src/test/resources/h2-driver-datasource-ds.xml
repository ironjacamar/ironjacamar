<?xml version="1.0" encoding="UTF-8"?>

<datasources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="http://www.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
  <datasource jndi-name="java:/H2DS" pool-name="H2DS">
    <driver>h2</driver>
    <connection-property name="URL">jdbc:h2:mem:test</connection-property>
    <security>
      <user-name>sa</user-name>
      <password>sa</password>
    </security>
  </datasource>
  <drivers>
      <driver name="h2">
         <datasource-class>org.h2.jdbcx.JdbcDataSource</datasource-class>
      </driver>
  </drivers>

</datasources>
