<project name="docant" 
         default="support" 
         basedir=".">

  <available classname="java.lang.Enum" property="HAVE_JDK_1.5"/>
  <available classname="java.lang.management.LockInfo" property="HAVE_JDK_1.6"/>
  <available classname="java.util.concurrent.ForkJoinPool" property="HAVE_JDK_1.7"/>

  <!-- ================================= 
       Project              
       ================================= -->
  <property name="name" value="docant"/>

  <!-- ================================= 
       Properties              
       ================================= -->
  <property name="docant.dir" value="${basedir}" />
  <property name="docant.lib.dir" value="${docant.dir}/lib" />
  <property name="docant.target.dir" value="${docant.dir}/target" />

  <path id="lib.path.id">
    <fileset dir="${docant.lib.dir}">
      <include name="**/*.jar"/>
    </fileset>
    <fileset dir="${docant.target.dir}">
      <include name="*.jar"/>
    </fileset>
  </path>


  <!-- ================================= 
       Versions              
       ================================= -->

  <property name="version.docant" value="1.1.1.Final"/>

  <property name="version.jdocbook-core" value="1.1.0"/>

  <property name="version.docbook-xsl" value="1.76.1"/>
  <property name="version.docbook-xsl-old" value="1.76.1"/>

  <property name="version.pressgang-docbook-xslt" value="3.0.0"/>
  <property name="version.pressgang-jdocbook-style" value="3.0.0"/>

  <!-- ================================= 
       Target: init              
       ================================= -->
  <target name="init">
    <mkdir dir="${docant.target.dir}" />
  </target>
  
  <!-- ================================= 
       Target: compile
       ================================= -->
  <target name="support">
    <property name="staging.dir" value="${docant.target.dir}/docbook/staging"/>

    <unzip src="${docant.lib.dir}/docant-${version.docant}.jar" dest="${staging.dir}">
      <patternset>
        <include name="catalog.xml.in"/>
      </patternset>
    </unzip>
    <move file="${staging.dir}/catalog.xml.in" tofile="${staging.dir}/catalog.xml"/>

    <copy todir="${staging.dir}">
      <fileset dir="${docant.dir}/ironjacamar-style"/>
    </copy>

    <unzip src="${docant.lib.dir}/docbook/docbook-xsl-${version.docbook-xsl}.zip" dest="${staging.dir}"/>
    <unzip src="${docant.lib.dir}/style/pressgang-jdocbook-style-${version.pressgang-jdocbook-style}.jdocbook-style" dest="${staging.dir}">
      <patternset>
        <exclude name="META-INF/**"/>
      </patternset>
    </unzip>
    <unzip src="${docant.lib.dir}/style/pressgang-fonts-${version.pressgang-jdocbook-style}.jdocbook-style" dest="${staging.dir}"/>
  </target>

  <!-- ================================= 
       Target: clean              
       ================================= -->
  <target name="clean">
    <delete dir="${docant.target.dir}"/>
  </target>

</project>
